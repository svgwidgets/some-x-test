<template>
  <div class="component-properties">
    <!-- Basic Info Section -->
    <div class="property-section">
      <h4 class="section-title">Basic Information</h4>
      
      <div class="form-group">
        <label>Component ID</label>
        <input
          v-model="localComponent.id"
          type="text"
          class="form-input"
          :class="{ 'error': !isIdValid }"
          placeholder="e.g., V-001"
        />
        <span v-if="!isIdValid" class="error-message">ID already exists</span>
      </div>
      
      <div class="form-group">
        <label>Type</label>
        <input
          :value="componentTypeLabel"
          type="text"
          class="form-input"
          disabled
        />
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <label>X Position</label>
          <input
            :value="localComponent.position.x"
            type="number"
            class="form-input"
            disabled
          />
        </div>
        <div class="form-group">
          <label>Y Position</label>
          <input
            :value="localComponent.position.y"
            type="number"
            class="form-input"
            disabled
          />
        </div>
      </div>
    </div>
    
    <!-- Data Bindings Section -->
    <div class="property-section">
      <h4 class="section-title">Data Bindings</h4>
      
      <div class="form-group">
        <label>State Binding</label>
        <input
          v-model="localComponent.dataBindings.state"
          type="text"
          class="form-input"
          placeholder="e.g., plc1.valves.V001.state"
        />
        <span class="help-text">PLC tag for component state</span>
      </div>
      
      <div class="form-group" v-if="needsValueBinding">
        <label>Value Binding</label>
        <input
          v-model="localComponent.dataBindings.value"
          type="text"
          class="form-input"
          placeholder="e.g., plc1.sensors.PT001.value"
        />
        <span class="help-text">PLC tag for sensor value or tank level</span>
      </div>
    </div>
    
    <!-- Component-Specific Configuration -->
    <div class="property-section">
      <h4 class="section-title">Configuration</h4>
      
      <!-- Valve Config -->
      <template v-if="component.type === 'valve'">
        <div class="form-group">
          <label>Valve Type</label>
          <select v-model="localComponent.config.valveType" class="form-select">
            <option value="ax">AX (Diamond)</option>
            <option value="bx">BX (Triangle)</option>
            <option value="cx">CX (Diamond + Actuator)</option>
          </select>
        </div>
        
        <div class="form-group">
          <label>Size</label>
          <input
            v-model="localComponent.config.size"
            type="text"
            class="form-input"
            placeholder='e.g., 2"'
          />
        </div>
        
        <div class="form-group">
          <label class="checkbox-label">
            <input
              v-model="localComponent.config.controllable"
              type="checkbox"
            />
            <span>Controllable in Runtime</span>
          </label>
        </div>
      </template>
      
      <!-- Pump Config -->
      <template v-if="component.type === 'pump'">
        <div class="form-group">
          <label>Pump Type</label>
          <select v-model="localComponent.config.pumpType" class="form-select">
            <option value="centrifugal">Centrifugal</option>
            <option value="gear">Gear</option>
            <option value="diaphragm">Diaphragm</option>
            <option value="peristaltic">Peristaltic</option>
          </select>
        </div>
        
        <div class="form-group">
          <label>Rated RPM</label>
          <input
            v-model.number="localComponent.config.ratedRPM"
            type="number"
            class="form-input"
            placeholder="3600"
          />
        </div>
        
        <div class="form-group">
          <label class="checkbox-label">
            <input
              v-model="localComponent.config.showRPM"
              type="checkbox"
            />
            <span>Show RPM Display</span>
          </label>
        </div>
      </template>
      
      <!-- Tank Config -->
      <template v-if="component.type === 'tank'">
        <div class="form-group">
          <label>Capacity</label>
          <input
            v-model.number="localComponent.config.capacity"
            type="number"
            class="form-input"
            placeholder="5000"
          />
        </div>
        
        <div class="form-group">
          <label>Unit</label>
          <select v-model="localComponent.config.capacityUnit" class="form-select">
            <option value="L">Liters (L)</option>
            <option value="gal">Gallons (gal)</option>
            <option value="m³">Cubic Meters (m³)</option>
          </select>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label>Alarm Low (%)</label>
            <input
              v-model.number="localComponent.config.alarmLow"
              type="number"
              class="form-input"
              placeholder="10"
              min="0"
              max="100"
            />
          </div>
          <div class="form-group">
            <label>Alarm High (%)</label>
            <input
              v-model.number="localComponent.config.alarmHigh"
              type="number"
              class="form-input"
              placeholder="95"
              min="0"
              max="100"
            />
          </div>
        </div>
      </template>
      
      <!-- Sensor Config -->
      <template v-if="component.type === 'sensor'">
        <div class="form-group">
          <label>Sensor Type</label>
          <select v-model="localComponent.config.sensorType" class="form-select">
            <option value="pressure">Pressure (PT)</option>
            <option value="temperature">Temperature (TT)</option>
            <option value="flow">Flow (FT)</option>
            <option value="level">Level (LT)</option>
          </select>
        </div>
        
        <div class="form-group">
          <label>Unit</label>
          <input
            v-model="localComponent.config.unit"
            type="text"
            class="form-input"
            placeholder="bar, °C, L/min, %"
          />
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label>Min Value</label>
            <input
              v-model.number="localComponent.config.minValue"
              type="number"
              class="form-input"
              placeholder="0"
            />
          </div>
          <div class="form-group">
            <label>Max Value</label>
            <input
              v-model.number="localComponent.config.maxValue"
              type="number"
              class="form-input"
              placeholder="200"
            />
          </div>
        </div>
        
        <div class="form-group">
          <label>Precision (decimals)</label>
          <input
            v-model.number="localComponent.config.precision"
            type="number"
            class="form-input"
            placeholder="1"
            min="0"
            max="3"
          />
        </div>
      </template>
    </div>
  </div>
</template>

<script setup lang="ts">
import { ref, computed, watch } from 'vue';
import { useDiagramStore } from '@/stores/diagram';
import type { ComponentBase } from '@/core/types';

interface Props {
  component: ComponentBase;
  modelValue: ComponentBase;
}

const props = defineProps<Props>();
const emit = defineEmits<{
  'update:modelValue': [value: ComponentBase];
}>();

const diagramStore = useDiagramStore();

// Local editable copy
const localComponent = ref<ComponentBase>(JSON.parse(JSON.stringify(props.component)));

// Initialize config if missing
if (!localComponent.value.config) {
  localComponent.value.config = {};
}
if (!localComponent.value.dataBindings) {
  localComponent.value.dataBindings = {};
}

// Watch for changes and emit
watch(localComponent, (newValue) => {
  emit('update:modelValue', newValue);
}, { deep: true });

// Component type label
const componentTypeLabel = computed(() => {
  const types: Record<string, string> = {
    valve: 'Valve',
    pump: 'Pump',
    tank: 'Tank',
    sensor: 'Sensor',
  };
  return types[props.component.type] || props.component.type;
});

// Check if ID is valid (unique)
const isIdValid = computed(() => {
  if (!localComponent.value.id) return false;
  
  // Check if ID exists on another component
  const existingComponent = diagramStore.components.find(
    c => c.id === localComponent.value.id && c.id !== props.component.id
  );
  
  return !existingComponent;
});

// Check if component needs value binding (tank, sensor)
const needsValueBinding = computed(() => {
  return ['tank', 'sensor'].includes(props.component.type);
});
</script>

<style scoped>
.component-properties {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.property-section {
  background: white;
  border: 1px solid var(--color-border-light);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
}

.section-title {
  margin: 0 0 var(--spacing-md) 0;
  font-size: 13px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  color: var(--color-text-secondary);
}

.form-group {
  margin-bottom: var(--spacing-md);
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-group label {
  display: block;
  margin-bottom: var(--spacing-xs);
  font-size: 13px;
  font-weight: 600;
  color: var(--color-text-primary);
}

.form-input,
.form-select {
  width: 100%;
  padding: var(--spacing-sm) var(--spacing-md);
  border: 1px solid var(--color-border-medium);
  border-radius: var(--radius-sm);
  font-size: 14px;
  font-family: inherit;
  transition: all var(--transition-fast);
}

.form-input:focus,
.form-select:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(25, 118, 210, 0.1);
}

.form-input:disabled {
  background: var(--color-bg-secondary);
  color: var(--color-text-secondary);
  cursor: not-allowed;
}

.form-input.error {
  border-color: #F44336;
}

.error-message {
  display: block;
  margin-top: var(--spacing-xs);
  font-size: 12px;
  color: #F44336;
}

.help-text {
  display: block;
  margin-top: var(--spacing-xs);
  font-size: 12px;
  color: var(--color-text-secondary);
  font-style: italic;
}

.form-row {
  display: grid;
