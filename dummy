<template>
  <div class="library-demo">
    <header class="demo-header">
      <h1>P&ID Component Library Demo</h1>
      <p>Specific components with metadata-based rendering (No v-html!)</p>
    </header>
    
    <div class="demo-controls">
      <div class="control-group">
        <h3>Controls</h3>
        <button @click="toggleGateValve" class="btn">
          Toggle Gate Valve
        </button>
        <button @click="openControlValve" class="btn">
          Open Control Valve (+10%)
        </button>
        <button @click="closeControlValve" class="btn">
          Close Control Valve (-10%)
        </button>
        <button @click="setControlValve50" class="btn">
          Set Control Valve 50%
        </button>
        <button @click="togglePump" class="btn" :class="{ 'btn-active': pumpIO.value }">
          {{ pumpIO.value ? 'Stop' : 'Start' }} Pump
        </button>
        <button @click="increaseTankLevel" class="btn">Tank +10%</button>
        <button @click="decreaseTankLevel" class="btn">Tank -10%</button>
      </div>
      
      <div class="control-group">
        <h3>Status</h3>
        <div class="status-item">
          <strong>Gate Valve:</strong> 
          <span :style="{ color: getIOColor(gateValveIO) }">{{ gateValveIO.getStateLabel() }}</span>
        </div>
        <div class="status-item">
          <strong>Control Valve:</strong> 
          <span :style="{ color: getIOColor(controlValveIO) }">
            {{ Math.round(controlValveIO.value) }}% ({{ getControlValveState() }})
          </span>
        </div>
        <div class="status-item">
          <strong>Pump:</strong> 
          <span :style="{ color: getIOColor(pumpIO) }">{{ pumpIO.getStateLabel() }}</span>
        </div>
        <div class="status-item">
          <strong>Tank:</strong> 
          <span :style="{ color: getIOColor(tankIO) }">{{ Math.round(tankIO.value) }}%</span>
        </div>
        <div class="status-item">
          <strong>Pressure:</strong> 
          <span :style="{ color: getIOColor(pressureIO) }">{{ pressureIO.value.toFixed(1) }} bar</span>
        </div>
      </div>
    </div>
    
    <div class="demo-canvas">
      <svg width="1200" height="600" viewBox="0 0 1200 600">
        <rect width="1200" height="600" fill="#F5F7FA" />
        
        <defs>
          <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
            <path d="M 20 0 L 0 0 0 20" fill="none" stroke="#E0E0E0" stroke-width="1" opacity="0.3"/>
          </pattern>
        </defs>
        <rect width="1200" height="600" fill="url(#grid)" />
        
        <text x="600" y="40" text-anchor="middle" font-size="20" font-weight="bold" fill="#333">
          Clean Architecture: Specific Components + Metadata Rendering
        </text>
        
        <!-- Valves -->
        <text x="100" y="100" font-size="14" font-weight="bold" fill="#666">
          Gate Valve (Digital):
        </text>
        
        <g :transform="`translate(100, 130)`">
          <GateValve :io="gateValveIO" />
        </g>
        
        <text x="300" y="100" font-size="14" font-weight="bold" fill="#666">
          Control Valve (Analog):
        </text>
        
        <g :transform="`translate(300, 130)`">
          <ControlValve :io="controlValveIO" />
        </g>
        
        <!-- Equipment -->
        <text x="100" y="260" font-size="14" font-weight="bold" fill="#666">Equipment:</text>
        
        <AnimatedComponent 
          :io="pumpIO" 
          :animations="pumpIO.value ? [pumpAnimation!] : []"
        >
          <g :transform="`translate(100, 290)`">
            <CentrifugalPump :io="pumpIO" />
          </g>
        </AnimatedComponent>
        
        <AnimatedComponent 
          :io="pipeIO" 
          :animations="pipeIO.value > 0 ? [pipeAnimation!] : []"
        >
          <Pipe
            :from="{ x: 140, y: 310 }"
            :to="{ x: 300, y: 310 }"
            :flowing="pipeIO.value > 0"
          />
        </AnimatedComponent>
        
        <AnimatedComponent 
          :io="tankIO" 
          :animations="[tankAnimation!]"
        >
          <g :transform="`translate(300, 240)`">
            <VerticalTank :io="tankIO" />
          </g>
        </AnimatedComponent>
        
        <!-- Sensors -->
        <text x="100" y="480" font-size="14" font-weight="bold" fill="#666">Sensors:</text>
        
        <g :transform="`translate(100, 510)`">
          <PressureSensor :io="pressureIO" />
        </g>
        
        <g :transform="`translate(250, 510)`">
          <TemperatureSensor :io="temperatureIO" />
        </g>
      </svg>
    </div>
  </div>
</template>

<script setup lang="ts">
import { reactive } from 'vue';
import { 
  createDigitalIO, 
  createAnalogIO, 
  DIGITAL_IO_PRESETS, 
  ANALOG_IO_PRESETS,
  type DigitalIO,
  type AnalogIO,
  GateValve,
  ControlValve,
  CentrifugalPump,
  VerticalTank,
  PressureSensor,
  TemperatureSensor,
  Pipe,
  AnimatedComponent,
  animationLibrary,
  getIOColor
} from '@/lib';

// Gate Valve (Digital)
const gateValveIO = reactive(createDigitalIO({
  id: 'V-001',
  channel: 'demo.valves.V001.state',
  initialValue: false,
  ...DIGITAL_IO_PRESETS.valve,
})) as DigitalIO;

// Control Valve (Analog)
const controlValveIO = reactive(createAnalogIO({
  id: 'CV-001',
  channel: 'demo.valves.CV001.position',
  initialValue: 50,
  ...ANALOG_IO_PRESETS.controlValve,
})) as AnalogIO;

const pumpIO = reactive(createDigitalIO({
  id: 'P-001',
  channel: 'demo.pumps.P001.state',
  initialValue: false,
  ...DIGITAL_IO_PRESETS.pump,
})) as DigitalIO;

const tankIO = reactive(createAnalogIO({
  id: 'TK-001',
  channel: 'demo.tanks.TK001.level',
  initialValue: 50,
  ...ANALOG_IO_PRESETS.level,
})) as AnalogIO;

const pressureIO = reactive(createAnalogIO({
  id: 'PT-001',
  channel: 'demo.sensors.PT001.value',
  initialValue: 100,
  ...ANALOG_IO_PRESETS.pressure,
})) as AnalogIO;

const temperatureIO = reactive(createAnalogIO({
  id: 'TT-001',
  channel: 'demo.sensors.TT001.value',
  initialValue: 75,
  ...ANALOG_IO_PRESETS.temperature,
})) as AnalogIO;

const pipeIO = reactive(createAnalogIO({
  id: 'PIPE-001',
  channel: 'demo.pipes.PIPE001.flow',
  initialValue: 0,
  unit: 'L/min',
  range: { min: 0, max: 500 },
})) as AnalogIO;

// Animations
const pumpAnimation = animationLibrary.get('pump-rotation');
const tankAnimation = animationLibrary.get('tank-fill');
const pipeAnimation = animationLibrary.get('pipe-flow');

// Controls
function toggleGateValve() {
  gateValveIO.toggle();
}

function openControlValve() {
  controlValveIO.updateValue(Math.min(100, controlValveIO.value + 10));
}

function closeControlValve() {
  controlValveIO.updateValue(Math.max(0, controlValveIO.value - 10));
}

function setControlValve50() {
  controlValveIO.updateValue(50);
}

function getControlValveState(): string {
  const value = controlValveIO.value;
  if (value < 10) return 'Closed';
  if (value > 90) return 'Open';
  return 'Regulating';
}

function togglePump() {
  pumpIO.toggle();
  pipeIO.updateValue(pumpIO.value ? 150 : 0);
}

function increaseTankLevel() {
  tankIO.updateValue(Math.min(100, tankIO.value + 10));
}

function decreaseTankLevel() {
  tankIO.updateValue(Math.max(0, tankIO.value - 10));
}
</script>

