<template>
  <g>
    <!-- Render SVG from definition -->
    <g v-html="parsedSvg"></g>
    
    <!-- Ports -->
    <g v-if="showPorts">
      <circle 
        v-for="port in visual.ports"
        :key="port.id"
        :cx="port.position.x" 
        :cy="port.position.y" 
        r="4" 
        :fill="port.type === 'inlet' ? '#2196F3' : '#FF9800'" 
        stroke="#333" 
        stroke-width="1.5"
      />
    </g>
    
    <!-- Label -->
    <text 
      v-if="showLabel"
      :x="centerX" 
      :y="-8" 
      text-anchor="middle" 
      font-size="10" 
      font-weight="bold" 
      fill="#333"
    >
      {{ io.id }}
    </text>
  </g>
</template>

<script setup lang="ts">
import { computed } from 'vue';
import type { DigitalIO } from '../io';
import { svgLibrary, getIOColor } from '../visuals';

interface Props {
  io: DigitalIO;
  visualId?: string;
  showPorts?: boolean;
  showLabel?: boolean;
}

const props = withDefaults(defineProps<Props>(), {
  visualId: 'valve-ax',
  showPorts: true,
  showLabel: true,
});

const visual = computed(() => {
  const v = svgLibrary.get(props.visualId);
  if (!v) {
    console.warn(`[Valve] Visual '${props.visualId}' not found`);
    return svgLibrary.get('valve-ax')!;
  }
  return v;
});

const centerX = computed(() => visual.value.viewBox.width / 2);
const valveColor = computed(() => getIOColor(props.io));

const parsedSvg = computed(() => {
  const svg = visual.value.svg;
  
  // If SVG already contains elements, inject color
  if (svg.includes('<')) {
    return svg.replace(/fill="[^"]*"/g, `fill="${valveColor.value}"`);
  }
  
  // If just paths, wrap and color them
  const paths = svg.split(' M ').map((p, i) => i === 0 ? p : 'M ' + p);
  return paths.map(p => `<path d="${p}" fill="${valveColor.value}" stroke="#333" stroke-width="2" />`).join('');
});
</script>
