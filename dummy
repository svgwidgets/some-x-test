/**
 * Visual I/O Component
 * 
 * Combines I/O abstraction with visual definition.
 * This is the complete component that can be rendered on canvas.
 */

import type { IOComponent } from '../io/IOComponent';
import type { VisualDefinition, Position } from './VisualDefinition';

export interface VisualIOComponent {
  /** Unique component ID */
  id: string;
  
  /** I/O data binding */
  io: IOComponent;
  
  /** Visual representation */
  visual: VisualDefinition;
  
  /** Position on canvas */
  position: Position;
  
  /** Rotation angle in degrees */
  rotation?: number;
  
  /** Optional label override */
  label?: string;
}

/**
 * Create a visual I/O component
 */
export function createVisualIOComponent(config: {
  id: string;
  io: IOComponent;
  visual: VisualDefinition;
  position: Position;
  rotation?: number;
  label?: string;
}): VisualIOComponent {
  return {
    id: config.id,
    io: config.io,
    visual: config.visual,
    position: config.position,
    rotation: config.rotation || 0,
    label: config.label || config.id,
  };
}
