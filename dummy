// Watch for selection changes - use immediate and deep
watch(() => props.selectedItem, (newItem) => {
  if (newItem) {
    // Force deep clone to break reactivity issues
    editedData.value = JSON.parse(JSON.stringify(newItem.data));
    hasChanges.value = false;
  }
}, { immediate: true, deep: true });

// Also watch the actual data for updates
watch(() => props.selectedItem?.data, (newData) => {
  if (newData) {
    editedData.value = JSON.parse(JSON.stringify(newData));
    hasChanges.value = false;
  }
}, { immediate: true, deep: true });
