/**
 * I/O Component Library
 * 
 * Provides abstract base classes and interfaces for digital and analog I/O components.
 * This is the foundation for all P&ID components with data binding capabilities.
 * 
 * @example
 * ```typescript
 * import { createDigitalIO, DIGITAL_IO_PRESETS } from '@/lib/io';
 * 
 * const valve = createDigitalIO({
 *   id: 'V-001',
 *   channel: 'plc1.valves.V001.state',
 *   ...DIGITAL_IO_PRESETS.valve
 * });
 * ```
 */

// Base exports
export type { IOComponent, IOMetadata } from './IOComponent';
export { BaseIOComponent } from './IOComponent';

// Digital I/O exports
export type { 
  DigitalIO, 
  DigitalStateMapping 
} from './DigitalIO';
export { 
  DigitalIOComponent, 
  createDigitalIO, 
  DIGITAL_IO_PRESETS 
} from './DigitalIO';

// Analog I/O exports
export type { 
  AnalogIO, 
  AnalogRange, 
  AnalogAlarms, 
  AnalogWarnings,
  AnalogState
} from './AnalogIO';
export { 
  AnalogIOComponent, 
  createAnalogIO, 
  ANALOG_IO_PRESETS 
} from './AnalogIO';

// Type guards
export function isDigitalIO(io: IOComponent): io is DigitalIO {
  return io.ioType === 'digital';
}

export function isAnalogIO(io: IOComponent): io is AnalogIO {
  return io.ioType === 'analog';
}
