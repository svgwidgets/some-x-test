<template>
  <g>
    <!-- Render SVG from definition -->
    <g v-html="parsedSvg"></g>
    
    <!-- Ports -->
    <g v-if="showPorts">
      <circle 
        v-for="port in visual.ports"
        :key="port.id"
        :cx="port.position.x" 
        :cy="port.position.y" 
        r="4" 
        :fill="port.type === 'inlet' ? '#2196F3' : '#FF9800'" 
        stroke="#333" 
        stroke-width="1.5"
      />
    </g>
    
    <!-- Label -->
    <text 
      v-if="showLabel"
      :x="centerX" 
      :y="-8" 
      text-anchor="middle" 
      font-size="10" 
      font-weight="bold" 
      fill="#333"
    >
      {{ io.id }}
    </text>
  </g>
</template>

<script setup lang="ts">
import { computed } from 'vue';
import type { DigitalIO } from '../io';
import { svgLibrary, getIOColor } from '../visuals';

interface Props {
  io: DigitalIO;
  visualId?: string;
  showPorts?: boolean;
  showLabel?: boolean;
}

const props = withDefaults(defineProps<Props>(), {
  visualId: 'pump-centrifugal',
  showPorts: true,
  showLabel: true,
});

const visual = computed(() => svgLibrary.get(props.visualId)!);
const centerX = computed(() => visual.value.viewBox.width / 2);
const pumpColor = computed(() => getIOColor(props.io));

const parsedSvg = computed(() => {
  return visual.value.svg.replace(/fill="#[^"]*"/g, `fill="${pumpColor.value}"`);
});
</script>
