/**
 * Animation System Library
 * 
 * Generic animation abstraction for P&ID components.
 * 
 * @example
 * ```typescript
 * import { animationLibrary, animationController } from '@/lib/animations';
 * 
 * const pumpAnim = animationLibrary.get('pump-rotation');
 * animationController.applyAnimation(element, pumpAnim, pumpIO);
 * ```
 */

// Core exports
export type {
  AnimationDefinition,
  AnimationType,
  AnimationEasing,
  AnimationCondition,
  AnimationValueCalculator,
  AnimationState,
  BaseAnimationConfig,
  BaseAnimationDirection,
  FillDirection,
  RotationAnimationConfig,
  FillAnimationConfig,
  FlowAnimationConfig,
  ScaleAnimationConfig,
} from './AnimationDefinition';

export {
  ANIMATION_CONDITIONS,
  VALUE_CALCULATORS,
} from './AnimationDefinition';

// Library exports
export {
  AnimationLibrary,
  animationLibrary,
  PREDEFINED_ANIMATIONS,
  PUMP_ROTATION,
  MOTOR_ROTATION,
  TANK_FILL,
  PIPE_FLOW,
  VALVE_TRANSITION,
  ALARM_BLINK,
  GAUGE_NEEDLE,
} from './AnimationLibrary';

// Controller exports
export {
  AnimationController,
  animationController,
} from './AnimationController';

// Component exports
export { default as AnimatedComponent } from './AnimatedComponent.vue';

