<template>
  <div class="library-demo">
    <header class="demo-header">
      <h1>P&ID Component Library Demo</h1>
      <p>Interactive component testing</p>
    </header>
    
    <div class="demo-controls">
      <div class="control-group">
        <h3>Controls</h3>
        <button @click="toggleValve" class="btn">
          Toggle Valves ({{ valveIO.getStateLabel() }})
        </button>
        <button @click="togglePump" class="btn" :class="{ 'btn-active': pumpIO.value }">
          {{ pumpIO.value ? 'Stop' : 'Start' }} Pump
        </button>
        <button @click="increaseTankLevel" class="btn">
          Tank +10%
        </button>
        <button @click="decreaseTankLevel" class="btn">
          Tank -10%
        </button>
        <button @click="increasePressure" class="btn">
          Pressure +10
        </button>
        <button @click="decreasePressure" class="btn">
          Pressure -10
        </button>
        <button @click="randomizeAll" class="btn btn-secondary">
          Randomize
        </button>
      </div>
      
      <div class="control-group">
        <h3>Status</h3>
        <div class="status-item">
          <strong>Valve:</strong> 
          <span :style="{ color: getIOColor(valveIO) }">{{ valveIO.getStateLabel() }}</span>
        </div>
        <div class="status-item">
          <strong>Pump:</strong> 
          <span :style="{ color: getIOColor(pumpIO) }">{{ pumpIO.getStateLabel() }}</span>
        </div>
        <div class="status-item">
          <strong>Tank:</strong> 
          <span :style="{ color: getIOColor(tankIO) }">{{ Math.round(tankIO.value) }}%</span>
        </div>
        <div class="status-item">
          <strong>Pressure:</strong> 
          <span :style="{ color: getIOColor(pressureIO) }">{{ pressureIO.value.toFixed(1) }} bar</span>
        </div>
        <div class="status-item">
          <strong>Temperature:</strong> 
          <span :style="{ color: getIOColor(temperatureIO) }">{{ temperatureIO.value.toFixed(1) }} Â°C</span>
        </div>
      </div>
    </div>
    
    <div class="demo-canvas">
      <svg width="1200" height="600" viewBox="0 0 1200 600">
        <rect width="1200" height="600" fill="#F5F7FA" />
        
        <!-- Grid -->
        <defs>
          <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
            <path d="M 20 0 L 0 0 0 20" fill="none" stroke="#E0E0E0" stroke-width="1" opacity="0.3"/>
          </pattern>
        </defs>
        <rect width="1200" height="600" fill="url(#grid)" />
        
        <!-- Title -->
        <text x="600" y="40" text-anchor="middle" font-size="20" font-weight="bold" fill="#333">
          Component Demo
        </text>
        
        <!-- Valves -->
        <text x="100" y="100" font-size="14" font-weight="bold" fill="#666">Valves:</text>
        
        <g :transform="`translate(100, 130)`">
          <ValveRenderer
            :io="valveIO"
            :visual="valveGateVisual!"
            :position="{ x: 0, y: 0 }"
            label="V-001"
          />
        </g>
        
        <g :transform="`translate(250, 130)`">
          <ValveRenderer
            :io="ballValveIO"
            :visual="ballValveVisual!"
            :position="{ x: 0, y: 0 }"
            label="V-002"
          />
        </g>
        
        <g :transform="`translate(400, 130)`">
          <ValveRenderer
            :io="actuatedValveIO"
            :visual="actuatedValveVisual!"
            :position="{ x: 0, y: 0 }"
            label="V-003"
          />
        </g>
        
        <!-- Equipment -->
        <text x="100" y="260" font-size="14" font-weight="bold" fill="#666">Equipment:</text>
        
        <AnimatedComponent 
          :io="pumpIO" 
          :animations="pumpIO.value ? [pumpAnimation!] : []"
        >
          <g :transform="`translate(100, 290)`">
            <PumpRenderer
              :io="pumpIO"
              :visual="pumpVisual!"
              :position="{ x: 0, y: 0 }"
              label="P-001"
            />
          </g>
        </AnimatedComponent>
        
        <AnimatedComponent 
          :io="pipeIO" 
          :animations="pipeIO.value > 0 ? [pipeAnimation!] : []"
        >
          <PipeRenderer
            :from="{ x: 140, y: 310 }"
            :to="{ x: 300, y: 310 }"
            :flowing="pipeIO.value > 0"
          />
        </AnimatedComponent>
        
        <AnimatedComponent 
          :io="tankIO" 
          :animations="[tankAnimation!]"
        >
          <g :transform="`translate(300, 240)`">
            <TankRenderer
              :io="tankIO"
              :visual="tankVisual!"
              :position="{ x: 0, y: 0 }"
              label="TK-001"
            />
          </g>
        </AnimatedComponent>
        
        <!-- Sensors -->
        <text x="100" y="480" font-size="14" font-weight="bold" fill="#666">Sensors:</text>
        
        <g :transform="`translate(100, 510)`">
          <SensorRenderer
            :io="pressureIO"
            :visual="pressureVisual!"
            :position="{ x: 0, y: 0 }"
          />
        </g>
        
        <g :transform="`translate(250, 510)`">
          <SensorRenderer
            :io="temperatureIO"
            :visual="temperatureVisual!"
            :position="{ x: 0, y: 0 }"
          />
        </g>
      </svg>
    </div>
  </div>
</template>

<script setup lang="ts">
import { computed } from 'vue';
import { 
  createDigitalIO, 
  createAnalogIO, 
  DIGITAL_IO_PRESETS, 
  ANALOG_IO_PRESETS,
  type DigitalIO,
  type AnalogIO
} from '@/lib/io';
import { svgLibrary, getIOColor } from '@/lib/visuals';
import { AnimatedComponent, animationLibrary, PUMP_ROTATION, TANK_FILL, PIPE_FLOW } from '@/lib/animations';

import ValveRenderer from './components/ValveRenderer.vue';
import PumpRenderer from './components/PumpRenderer.vue';
import TankRenderer from './components/TankRenderer.vue';
import SensorRenderer from './components/SensorRenderer.vue';
import PipeRenderer from './components/PipeRenderer.vue';

// I/O instances
const valveIO = createDigitalIO({
  id: 'V-001',
  channel: 'demo.valves.V001.state',
  initialValue: false,
  ...DIGITAL_IO_PRESETS.valve,
}) as DigitalIO;

const ballValveIO = createDigitalIO({
  id: 'V-002',
  channel: 'demo.valves.V002.state',
  initialValue: false,
  ...DIGITAL_IO_PRESETS.valve,
}) as DigitalIO;

const actuatedValveIO = createDigitalIO({
  id: 'V-003',
  channel: 'demo.valves.V003.state',
  initialValue: true,
  ...DIGITAL_IO_PRESETS.valve,
}) as DigitalIO;

const pumpIO = createDigitalIO({
  id: 'P-001',
  channel: 'demo.pumps.P001.state',
  initialValue: false,
  ...DIGITAL_IO_PRESETS.pump,
}) as DigitalIO;

const tankIO = createAnalogIO({
  id: 'TK-001',
  channel: 'demo.tanks.TK001.level',
  initialValue: 50,
  ...ANALOG_IO_PRESETS.level,
}) as AnalogIO;

const pressureIO = createAnalogIO({
  id: 'PT-001',
  channel: 'demo.sensors.PT001.value',
  initialValue: 100,
  ...ANALOG_IO_PRESETS.pressure,
}) as AnalogIO;

const temperatureIO = createAnalogIO({
  id: 'TT-001',
  channel: 'demo.sensors.TT001.value',
  initialValue: 75,
  ...ANALOG_IO_PRESETS.temperature,
}) as AnalogIO;

const pipeIO = createAnalogIO({
  id: 'PIPE-001',
  channel: 'demo.pipes.PIPE001.flow',
  initialValue: 0,
  unit: 'L/min',
  range: { min: 0, max: 500 },
}) as AnalogIO;

// Visuals
const valveGateVisual = svgLibrary.get('valve-gate');
const ballValveVisual = svgLibrary.get('valve-ball');
const actuatedValveVisual = svgLibrary.get('valve-actuated');
const pumpVisual = svgLibrary.get('pump-centrifugal');
const tankVisual = svgLibrary.get('tank-vertical');
const pressureVisual = svgLibrary.get('sensor-pressure');
const temperatureVisual = svgLibrary.get('sensor-temperature');

// Animations
const pumpAnimation = animationLibrary.get('pump-rotation');
const tankAnimation = animationLibrary.get('tank-fill');
const pipeAnimation = animationLibrary.get('pipe-flow');

// Controls
function toggleValve() {
  valveIO.toggle();
  ballValveIO.toggle();
  actuatedValveIO.toggle();
}

function togglePump() {
  pumpIO.toggle();
  pipeIO.updateValue(pumpIO.value ? 150 : 0);
}

function increaseTankLevel() {
  tankIO.updateValue(Math.min(100, tankIO.value + 10));
}

function decreaseTankLevel() {
  tankIO.updateValue(Math.max(0, tankIO.value - 10));
}

function increasePressure() {
  pressureIO.updateValue(Math.min(200, pressureIO.value + 10));
}

function decreasePressure() {
  pressureIO.updateValue(Math.max(0, pressureIO.value - 10));
}

function randomizeAll() {
  valveIO.updateValue(Math.random() > 0.5);
  ballValveIO.updateValue(Math.random() > 0.5);
  actuatedValveIO.updateValue(Math.random() > 0.5);
  const shouldRun = Math.random() > 0.5;
  pumpIO.updateValue(shouldRun);
  tankIO.updateValue(Math.random() * 100);
  pressureIO.updateValue(Math.random() * 200);
  temperatureIO.updateValue(Math.random() * 150);
  pipeIO.updateValue(shouldRun ? Math.random() * 500 : 0);
}
</script>

