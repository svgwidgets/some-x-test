<template>
  <div class="connection-properties">
    <!-- Basic Info Section -->
    <div class="property-section">
      <h4 class="section-title">Connection Information</h4>
      
      <div class="form-group">
        <label>Connection ID</label>
        <input
          :value="connection.id"
          type="text"
          class="form-input"
          disabled
        />
      </div>
      
      <div class="connection-info">
        <div class="endpoint">
          <span class="label">From:</span>
          <span class="value">{{ connection.from.componentId }}.{{ connection.from.portId }}</span>
        </div>
        <div class="arrow">→</div>
        <div class="endpoint">
          <span class="label">To:</span>
          <span class="value">{{ connection.to.componentId }}.{{ connection.to.portId }}</span>
        </div>
      </div>
    </div>
    
    <!-- Flow Data Binding Section -->
    <div class="property-section">
      <h4 class="section-title">Flow Data Binding</h4>
      
      <div class="form-group">
        <label>Flow Sensor Tag</label>
        <input
          v-model="localConnection.flowSensorTag"
          type="text"
          class="form-input"
          placeholder="e.g., plc1.flow.FT001.value"
        />
        <span class="help-text">PLC tag that controls pipe animation</span>
      </div>
      
      <div class="form-group">
        <label>Flow Threshold (to animate)</label>
        <input
          v-model.number="localConnection.flowThreshold"
          type="number"
          class="form-input"
          placeholder="1.0"
          step="0.1"
        />
        <span class="help-text">Minimum flow value to start animation (e.g., 1.0 L/min)</span>
      </div>
    </div>
    
    <!-- Visual Configuration Section -->
    <div class="property-section">
      <h4 class="section-title">Visual Configuration</h4>
      
      <div class="form-group">
        <label>Routing Type</label>
        <select v-model="localConnection.routingType" class="form-select">
          <option value="straight">Straight Line</option>
          <option value="orthogonal">Orthogonal (L-shape)</option>
          <option value="curved">Curved (Bezier)</option>
          <option value="auto">Auto (Smart)</option>
        </select>
      </div>
      
      <div class="form-group">
        <label>Pipe Size</label>
        <select v-model="localConnection.pipeSize" class="form-select">
          <option value="small">Small (2px)</option>
          <option value="medium">Medium (3px)</option>
          <option value="large">Large (4px)</option>
        </select>
      </div>
      
      <div class="form-group">
        <label class="checkbox-label">
          <input
            v-model="localConnection.showLabel"
            type="checkbox"
          />
          <span>Show Flow Value Label</span>
        </label>
      </div>
    </div>
    
    <!-- Flow Configuration Section -->
    <div class="property-section">
      <h4 class="section-title">Flow Settings</h4>
      
      <div class="form-group">
        <label>Flow Direction</label>
        <select v-model="localConnection.flow.direction" class="form-select">
          <option value="forward">Forward (→)</option>
          <option value="reverse">Reverse (←)</option>
          <option value="bidirectional">Bidirectional (↔)</option>
        </select>
      </div>
      
      <div class="form-group">
        <label>Rated Flow Rate</label>
        <input
          v-model.number="localConnection.flow.rate"
          type="number"
          class="form-input"
          placeholder="100"
        />
      </div>
      
      <div class="form-group">
        <label>Flow Unit</label>
        <input
          v-model="localConnection.flowUnit"
          type="text"
          class="form-input"
          placeholder="L/min, gpm, m³/h"
        />
      </div>
    </div>
  </div>
</template>

<script setup lang="ts">
import { ref, watch } from 'vue';
import type { Connection } from '@/core/types';

interface Props {
  connection: Connection;
  modelValue: Connection;
}

const props = defineProps<Props>();
const emit = defineEmits<{
  'update:modelValue': [value: Connection];
}>();

// Local editable copy with extended properties
const localConnection = ref<any>({
  ...JSON.parse(JSON.stringify(props.connection)),
  flowSensorTag: props.connection.flowSensorTag || '',
  flowThreshold: props.connection.flowThreshold || 1.0,
  routingType: props.connection.routingType || 'auto',
  pipeSize: props.connection.pipeSize || 'medium',
  showLabel: props.connection.showLabel || false,
  flowUnit: props.connection.flowUnit || 'L/min',
});

// Ensure flow object exists
if (!localConnection.value.flow) {
  localConnection.value.flow = {
    active: false,
    direction: 'forward',
    rate: 0,
  };
}

// Watch for changes and emit
watch(localConnection, (newValue) => {
  emit('update:modelValue', newValue);
}, { deep: true });
</script>

