<template>
  <div class="component-properties">
    <!-- Basic Info Section -->
    <div class="property-section">
      <h4 class="section-title">Component Information</h4>
      
      <div class="form-group">
        <label>Component ID</label>
        <input
          v-model="localComponent.id"
          type="text"
          class="form-input"
          :class="{ 'error': !isIdValid }"
          placeholder="e.g., V-001"
        />
        <span v-if="!isIdValid" class="error-message">ID already exists</span>
      </div>
      
      <div class="form-group">
        <label>Type</label>
        <input
          :value="componentTypeLabel"
          type="text"
          class="form-input"
          disabled
        />
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <label>X Position</label>
          <input
            :value="localComponent.position?.x || 0"
            type="number"
            class="form-input"
            disabled
          />
        </div>
        <div class="form-group">
          <label>Y Position</label>
          <input
            :value="localComponent.position?.y || 0"
            type="number"
            class="form-input"
            disabled
          />
        </div>
      </div>
    </div>
    
    <!-- Data Channel Section -->
    <div class="property-section">
      <h4 class="section-title">Data Channel</h4>
      
      <div class="form-group">
        <label>Channel</label>
        <input
          v-model="localComponent.channel"
          type="text"
          class="form-input"
          placeholder="e.g., plc1.V001"
        />
        <span class="help-text">Data source path for this component</span>
      </div>
    </div>
  </div>
</template>

<script setup lang="ts">
import { ref, computed, watch } from 'vue';
import { useDiagramStore } from '@/stores/diagram';
import type { ComponentBase } from '@/core/types';

interface Props {
  component: ComponentBase;
  modelValue: ComponentBase;
}

const props = defineProps<Props>();
const emit = defineEmits<{
  'update:modelValue': [value: ComponentBase];
}>();

const diagramStore = useDiagramStore();

// Local editable copy
const localComponent = ref<any>(JSON.parse(JSON.stringify(props.component)));

// Ensure channel exists
if (!localComponent.value.channel) {
  localComponent.value.channel = '';
}

// Watch for changes and emit
watch(localComponent, (newValue) => {
  emit('update:modelValue', newValue);
}, { deep: true });

// Component type label
const componentTypeLabel = computed(() => {
  const types: Record<string, string> = {
    valve: 'Valve',
    pump: 'Pump',
    tank: 'Tank',
    sensor: 'Sensor',
  };
  return types[props.component.type] || props.component.type;
});

// Check if ID is valid (unique)
const isIdValid = computed(() => {
  if (!localComponent.value.id) return false;
  
  // Check if ID exists on another component
  const existingComponent = diagramStore.components.find(
    c => c.id === localComponent.value.id && c.id !== props.component.id
  );
  
  return !existingComponent;
});
</script>

<style scoped>
.component-properties {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.property-section {
  background: white;
  border: 1px solid var(--color-border-light);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
}

.section-title {
  margin: 0 0 var(--spacing-md) 0;
  font-size: 13px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  color: var(--color-text-secondary);
}

.form-group {
  margin-bottom: var(--spacing-md);
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-group label {
  display: block;
  margin-bottom: var(--spacing-xs);
  font-size: 13px;
  font-weight: 600;
  color: var(--color-text-primary);
}

.form-input {
  width: 100%;
  padding: var(--spacing-sm) var(--spacing-md);
  border: 1px solid var(--color-border-medium);
  border-radius: var(--radius-sm);
  font-size: 14px;
  font-family: inherit;
  transition: all var(--transition-fast);
}

.form-input:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(25, 118, 210, 0.1);
}

.form-input:disabled {
  background: var(--color-bg-secondary);
  color: var(--color-text-secondary);
  cursor: not-allowed;
}

.form-input.error {
  border-color: #F44336;
}

.error-message {
  display: block;
  margin-top: var(--spacing-xs);
  font-size: 12px;
  color: #F44336;
}

.help-text {
  display: block;
  margin-top: var(--spacing-xs);
  font-size: 12px;
  color: var(--color-text-secondary);
  font-style: italic;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--spacing-md);
}
</style>
