<template>
  <g>
    <path
      v-for="(path, idx) in svgPaths"
      :key="idx"
      :d="path"
      :fill="valveColor"
      stroke="#333"
      stroke-width="2"
    />
    
    <circle cx="0" cy="12" r="4" fill="#2196F3" stroke="#333" stroke-width="1.5"/>
    <circle cx="40" cy="12" r="4" fill="#FF9800" stroke="#333" stroke-width="1.5"/>
    
    <text x="20" y="-8" text-anchor="middle" font-size="10" font-weight="bold" fill="#333">
      {{ label }}
    </text>
  </g>
</template>

<script setup lang="ts">
import { computed } from 'vue';
import type { DigitalIO } from '@/lib/io';
import type { VisualDefinition, Position } from '@/lib/visuals';
import { getIOColor } from '@/lib/visuals';

interface Props {
  io: DigitalIO;
  visual: VisualDefinition;
  position: Position;
  label?: string;
}

const props = defineProps<Props>();

const valveColor = computed(() => getIOColor(props.io));

const svgPaths = computed(() => {
  const svg = props.visual.svg;
  // Split multiple paths (M...Z M...Z)
  return svg.split(' M ').map((p, i) => i === 0 ? p : 'M ' + p);
});
</script>
