<template>
  <div class="connection-properties">
    <!-- Basic Info Section -->
    <div class="property-section">
      <h4 class="section-title">Connection Information</h4>
      
      <div class="form-group">
        <label>Connection ID</label>
        <input
          :value="connection.id"
          type="text"
          class="form-input"
          disabled
        />
      </div>
      
      <div class="connection-info">
        <div class="endpoint">
          <span class="label">From:</span>
          <span class="value">{{ connection.from.componentId }}.{{ connection.from.portId }}</span>
        </div>
        <div class="arrow">â†’</div>
        <div class="endpoint">
          <span class="label">To:</span>
          <span class="value">{{ connection.to.componentId }}.{{ connection.to.portId }}</span>
        </div>
      </div>
    </div>
    
    <!-- Data Channel Section -->
    <div class="property-section">
      <h4 class="section-title">Data Channel</h4>
      
      <div class="form-group">
        <label>Channel</label>
        <input
          v-model="localConnection.channel"
          type="text"
          class="form-input"
          placeholder="e.g., plc1.flow.FT001"
        />
        <span class="help-text">Data source for flow animation</span>
      </div>
    </div>
  </div>
</template>

<script setup lang="ts">
import { ref, watch } from 'vue';
import type { Connection } from '@/core/types';

interface Props {
  connection: Connection;
  modelValue: Connection;
}

const props = defineProps<Props>();
const emit = defineEmits<{
  'update:modelValue': [value: Connection];
}>();

// Local editable copy
const localConnection = ref<any>({
  ...JSON.parse(JSON.stringify(props.connection)),
  channel: props.connection.channel || '',
});

// Watch for changes and emit
watch(localConnection, (newValue) => {
  emit('update:modelValue', newValue);
}, { deep: true });
</script>

<style scoped>
.connection-properties {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

